<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Precautions">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precautions"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protect yourself and others around you by knowing the facts and taking
                    appropriate precautions. Follow advice provided by your local health authority."
                    android:textStyle="bold"
                    android:textColor="#272727"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/forestgreen"
                        android:padding="10dp"

                        >

                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Social distance"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Being in distance in
public is really necessary to avoid the spread of Covid-19."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/socialdistance"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/forestgreen"
                        android:padding="10dp"

                        >
                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Isolation"
                            android:textSize="30sp"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Isolate yourself if you feel unwell and be aware of your health. Stay at home."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/isolation"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/forestgreen"
                        android:padding="10dp"

                        >

                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="182dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Wear a mask"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Wear a mask while being around people to avoid spreading the virus. Do not touch your face."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/mask"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/forestgreen"
                        android:padding="10dp"

                        >
                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avoid crowds"
                            android:textSize="30sp"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Avoid large crowds where people come in touch with each other. Maintain a 1m gap."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/crowd"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/forestgreen"
                        android:padding="10dp"

                        >
                        <TextView
                            android:id="@+id/t5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Healthy diet"
                            android:textSize="30sp"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t5"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Have a healthy diet to keep your immune system strong. Stay fit."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/healthydiet"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/forestgreen"
                        android:padding="10dp"

                        >
                        <TextView
                            android:id="@+id/t6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Regular Yoga"
                            android:textSize="30sp"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t6"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Do regular yoga to stay fit and active. It helps fighting the virus."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/yoga"
                            android:layout_alignParentRight="true"

                            />
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>




        </LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/purple_700"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>