<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Symptoms">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Symptoms"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COVID-19 affects different people in different ways. Most infected
people will develop mild to moderate illness and recover without
hospitalization."
                    android:textStyle="bold"
                    android:textColor="#272727"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cases"
                        android:padding="10dp"

                        >

                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Fever or chills"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Fever is a common symptom of COVID-19.
However, not everyone experiences it."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/fever"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cases"
                        android:padding="10dp"

                        >
                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cough"
                            android:textSize="30sp"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="A dry cough is a cough that does not produce mucus from
airways."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/cough"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cases"
                        android:padding="10dp"

                        >

                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="182dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Shortness of breath"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Also called difficult breath."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/shortness"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cases"
                        android:padding="10dp"

                        >
                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fatigue"
                            android:textSize="30sp"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Fatigue is very common after viral infections, such as COVID."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/fatigue"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cases"
                        android:padding="10dp"

                        >
                        <TextView
                            android:id="@+id/t5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Body aches"
                            android:textSize="30sp"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t5"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Muscle painâ€”often isn't an
uncommon symptom for a viral infection."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/bodyache"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cases"
                        android:padding="10dp"

                        >
                        <TextView
                            android:id="@+id/t6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Headache"
                            android:textSize="30sp"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="203dp"
                            android:layout_height="56dp"
                            android:layout_below="@+id/t6"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:text="A headache is a potential symptom of COVID-19."
                            android:textColor="#ffff" />
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/headache"
                            android:layout_alignParentRight="true"

                            />
                    </RelativeLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>




        </LinearLayout>

    </ScrollView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/purple_700"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>